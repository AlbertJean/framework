static const char * s_hqFilledCirclePs = R"SHADER(

include engine/ShaderPS.txt

shader_in vec2 v_p;
shader_in vec2 v_center;
shader_in float v_radius;
shader_in vec4 v_color;

uniform sampler2D source;

float computeDistance(vec2 p)
{
	float d = length(p - v_center) - v_radius;
	
	return d;
}

float distanceFade(float distance)
{
	return clamp(- distance, 0.0, 1.0);
}

void main()
{
#if 0
	float v = distanceFade(computeDistance(v_p));
#else
	float v = 0.0;
	
	float d = - computeDistance(v_p);
	
	if (d > 1.0)
	{
		v = 1.0;
	}
	else if (d < 0.0)
	{
		v = 0.0;
	}
	else
	{
		for (int ox = -2; ox <= +2; ++ox)
		{
			for (int oy = -2; oy <= +2; ++oy)
			{
				v += distanceFade(computeDistance(v_p + vec2(ox, oy) * 0.25));
			}
		}
		
		v /= 25.0;
	}
#endif

	vec4 color = vec4(vec3(1), v);
	
	if (false)
	{
		//color = vec4(0.0, 1.0, 1.0, 1.0);
		color.a += 0.2;
		color.r = color.a;
	}
	
	color = color * v_color;
	
	shader_fragColor = color;
}

)SHADER";
